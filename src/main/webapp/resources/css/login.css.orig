/* login.css */
body {
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.01em;
}

.login-wrapper {
    background-color: #f8f9fa;
}

.login-card {
    width: 100%;
    max-width: 440px;
    border-radius: 12px;
}

/* Professional focus states */
.form-control:focus {
    box-shadow: none;
    border-color: #0d6efd;
}

.input-group-text {
    border-right: none;
}

/* Transitions for buttons */
.btn-primary {
    background-color: #0d6efd;
    transition: all 0.2s ease;
}

.btn-primary:hover {
    background-color: #0a58ca;
}