/* --- Global Layout Logic --- */
html, body {
    height: 100%;
    margin: 0;
}

body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fa;
}

/* Pushes the footer to the bottom of the screen */
main {
    flex: 1 0 auto;
    padding-bottom: 3rem;
}

/* --- Standardized Professional Footer --- */
.footer-custom {
    flex-shrink: 0;
    background-color: #ffffff !important; /* Pure white background */
    border-top: 1px solid #dee2e6; /* Professional thin line */
    padding: 1.25rem 0;
    width: 100%;
}

.footer-flex-container {
    display: flex;
    justify-content: space-between; /* Copyright left, Time right */
    align-items: center;
}

.footer-brand {
    font-size: 0.85rem;
    color: #495057;
}

#datetime {
    font-weight: 600;
    color: #0d6efd;
    font-size: 0.85rem;
    background: #f1f7ff; /* Subtle blue pill for the clock */
    padding: 5px 15px;
    border-radius: 50px;
    font-variant-numeric: tabular-nums;
}

/* --- Status Badges & Table --- */
.status-badge {
    padding: 6px 12px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.7rem;
    text-transform: uppercase;
}
.PENDING { background: #fff3cd; color: #856404; }
.APPROVED { background: #d1e7dd; color: #0f5132; }
.CANCELLED { background: #f8d7da; color: #842029; }

.btn-action-cancel {
    color: #dc3545;
    border: none;
    background: none;
    transition: transform 0.2s;
}
.btn-action-cancel:hover { transform: scale(1.2); }