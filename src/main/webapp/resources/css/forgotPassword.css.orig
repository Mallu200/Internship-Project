body {
    font-family: 'Inter', sans-serif;
}

.recovery-wrapper {
    background-color: #f8f9fa;
}

.recovery-card {
    width: 100%;
    max-width: 440px;
    border-radius: 12px;
}

/* Ensure focus and layout consistency */
.form-control:focus {
    box-shadow: none;
    border-color: #0d6efd;
}

.input-group-text {
    border-right: none;
}