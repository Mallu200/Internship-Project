package org.xworkz.prodex.configuration;

import org.springframework.web.servlet.support.AbstractAnnotationConfigDispatcherServletInitializer;
import org.springframework.lang.NonNull;

public class WebInit extends AbstractAnnotationConfigDispatcherServletInitializer {

    @Override
    protected Class<?>[] getRootConfigClasses() {
        // Loads DatabaseConfig, MailConfig, and AppConfig (Business Logic)
        return new Class[]{ AppConfig.class };
    }

    @Override
    protected Class<?>[] getServletConfigClasses() {
        // Loads WebConfig and SwaggerConfig (UI and Controllers)
        return new Class[]{ WebConfig.class, SwaggerConfig.class };
    }

    @Override
    protected @NonNull String[] getServletMappings() {
        return new String[]{ "/" };
    }
}